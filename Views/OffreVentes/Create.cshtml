@model GAP.Models.OffreVente

@{
    ViewData["Title"] = "Create";
}

<main>
    <article>
        <section class="sectiong featured-games" style="background-color: var(--raisin-black-3);" id="features" aria-label="featured game">

            <div class="frmcontainer" style="width:500px;">

                <h1 class="form-header">ADD Offre Vente</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Add the hidden field to store the DemandeAchatID -->
            <input type="hidden" name="demandeAchatId" value="@ViewBag.DemandeAchatId" />
            <div class="form-group">
                <label asp-for="unit_profit" class="control-label" hidden></label>
                        <input asp-for="unit_profit" class="form-control" placeholder="unit_profit" />
                <span asp-validation-for="unit_profit" class="text-danger"></span>
            </div>
            <!-- Add the dropdown menu for selecting products -->
                    <div class="form-group" style="display: flex; flex-direction: row;">
                        <label asp-for="SelectedProduitId" class="control-label" style="flex: 1;width:100px;"></label>
                    </div>
                    <div class="form-group" style="display: flex; flex-direction: row;">
                        <select asp-for="SelectedProduitId" asp-items="@ViewBag.ProduitsWithoutOffreVente" class="form-control" style="flex: 1; "></select>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="SelectedProduitId" class="text-danger"></span>
                    </div>

       
                    <div class="BTNS">

                        <a asp-for="OffreVenteID"> <input type="submit" value="Save" class="SUB-button" /></a>


                        <a asp-action="Index"> <input type="button" class="BTL-button" value="Back to List" /></a>

                    </div>
                </form>
            </div>


        </section>

    </article>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
