@model GAP.Models.QualityTestReport

@{
    ViewData["Title"] = "Create";
}

<main>
    <article>
        <section class="sectiong featured-games" style="background-color: var(--raisin-black-3);" id="features" aria-label="featured game">

            <div class="frmcontainer">

            <h1 class="form-header">ADD Rapport Test Qualite</h1>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="PurchaseQuoteId" value="@ViewBag.PurchaseQuoteId" />

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StateValidity" /> @Html.DisplayNameFor(model => model.StateValidity)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CntItemsValidity" /> @Html.DisplayNameFor(model => model.CntItemsValidity)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OperationValidity" /> @Html.DisplayNameFor(model => model.OperationValidity)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseQuoteId" class="control-label"></label>
                <select asp-for="PurchaseQuoteId" class="form-control" asp-items="@ViewBag.PurchaseQuoteList"></select>
                <span asp-validation-for="PurchaseQuoteId" class="text-danger"></span>
            </div>
                    <div class="BTNS">

                        <a asp-for="QualityTestReportID"> <input type="submit" value="Save" class="SUB-button" /></a>


                        <a asp-action="Index"> <input type="button" class="BTL-button" value="Back to List" /></a>

                    </div>
        </form>
            </div>


        </section>

    </article>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
