@model GAP.Models.RapportTestQualite

@{
    ViewData["Title"] = "Create";
}

<main>
    <article>
        <section class="sectiong featured-games" style="background-color: var(--raisin-black-3);" id="features" aria-label="featured game">

            <div class="frmcontainer">

            <h1 class="form-header">ADD Rapport Test Qualite</h1>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="devisId" value="@ViewBag.devisId" />

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ValiditeEtat" /> @Html.DisplayNameFor(model => model.ValiditeEtat)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ValiditeNbrPiece" /> @Html.DisplayNameFor(model => model.ValiditeNbrPiece)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ValiditeFonctionnement" /> @Html.DisplayNameFor(model => model.ValiditeFonctionnement)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DevisId" class="control-label"></label>
                <select asp-for="DevisId" class="form-control" asp-items="@ViewBag.DevisList"></select>
                <span asp-validation-for="DevisId" class="text-danger"></span>
            </div>
                    <div class="BTNS">

                        <a asp-for="RapportTestQualiteID"> <input type="submit" value="Save" class="SUB-button" /></a>


                        <a asp-action="Index"> <input type="button" class="BTL-button" value="Back to List" /></a>

                    </div>
        </form>
            </div>


        </section>

    </article>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
