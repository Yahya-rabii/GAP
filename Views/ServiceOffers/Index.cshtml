@model IEnumerable<GAP.Models.ServiceOffer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Validity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceRequest)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Validity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceRequest.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServiceOfferID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ServiceOfferID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ServiceOfferID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
