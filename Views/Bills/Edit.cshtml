@model GAP.Models.Bill

@{
    ViewData["Title"] = "Edit";
}

<div class="pcontainer" style="width:600px;">
    <div class="main-body">
        <div class="card uprofile-details">
            <div class="card-body">

                <h1 class="form-header">EDIT Bill</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BillID" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Validity" /> @Html.DisplayNameFor(model => model.Validity)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FinanceDepartmentManagerId" class="control-label"></label>
                <select asp-for="FinanceDepartmentManagerId" class="form-control" asp-items="ViewBag.FinanceDepartmentManagerId"></select>
                <span asp-validation-for="FinanceDepartmentManagerId" class="text-danger"></span>
            </div>
           
                    <div class="BTNS">

                        <a asp-for="UserID"> <input type="submit" value="Save" class="SUB-button" /></a>
                        <a asp-action="Delete" asp-route-id="@Model.BillID"><input type="button" class="DEL-button" value="Delete"> </a>
                        <a asp-action="Index"> <input type="button" class="BTL-button" value="Back to List" /></a>

                    </div>
                </form>
            </div>


</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
