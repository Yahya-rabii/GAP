@model GAP.Models.Product

@{
    ViewData["Title"] = "Create";
}

<main>
    <article>
        <section class="sectiong featured-games" style="background-color: var(--raisin-black-3);" id="features" aria-label="featured game">

            <div class="frmcontainer" style="width:500px;">

                <h1 class="form-header">ADD Product</h1>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Unitprice" class="control-label"></label>
                <input asp-for="Unitprice" class="form-control" />
                <span asp-validation-for="Unitprice" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemsNumber" class="control-label"></label>
                <input asp-for="ItemsNumber" class="form-control" />
                <span asp-validation-for="ItemsNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc" class="control-label"></label>
                <input asp-for="Desc" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
          

                    <div class="BTNS">

                        <a asp-for="ProductID"> <input type="submit" value="Save" class="SUB-button" /></a>


                        <a asp-action="Index"> <input type="button" class="BTL-button" value="Back to List" /></a>

                    </div>
                </form>
            </div>


        </section>

    </article>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
